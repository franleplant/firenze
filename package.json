{
  "name": "firenze.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier \"./src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "format": "yarn prettier --write",
    "format-check": "yarn prettier --check",
    "ci": "yarn lint && yarn format-check && yarn typecheck",
    "prepare": "husky install",
    "db": "docker-compose -f dev-db/docker-compose.yml --env-file dev-db/.config up",
    "db-update": "npx prisma migrate dev"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.4.5",
    "@headlessui/react": "^1.4.1",
    "@prisma/client": "^3.2.1",
    "@web3-react/core": "^6.1.9",
    "@web3-react/injected-connector": "^6.0.7",
    "ethers": "^5.4.7",
    "isomorphic-fetch": "^3.0.0",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "^3.26.0",
    "ts-invariant": "^0.9.3"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/react": "17.0.26",
    "autoprefixer": "^10.3.6",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "postcss": "^8.3.8",
    "prettier": "^2.4.1",
    "prisma": "3.2.1",
    "tailwindcss": "^2.2.16",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
